<group name="phishing,">

  <!-- Suspicious email subjects -->
  <rule id="100100" level="6">
    <decoded_as>postfix</decoded_as>
    <field name="subject">(?i).*(reset password|verify account|urgent|update login|account suspended).*<\/field>
    <description>Suspicious email subject - possible phishing attempt</description>
  </rule>

  <!-- Emails from known phishing domains -->
  <rule id="100101" level="10">
    <decoded_as>postfix</decoded_as>
    <field name="from">(?i).*@(phishy-domain\.com|badmail\.ru|malicious\.xyz).*<\/field>
    <description>Email from known phishing domain detected</description>
  </rule>

  <!-- Emails with suspicious attachments -->
  <rule id="100102" level="9">
    <decoded_as>postfix</decoded_as>
    <field name="attachment">(?i).*\.(exe|js|vbs|scr|bat|cmd)$</field>
    <description>Suspicious attachment detected in email</description>
  </rule>

  <!-- Emails with suspicious URLs in body -->
  <rule id="100103" level="7">
    <decoded_as>postfix</decoded_as>
    <field name="body">(?i).*(bit\.ly|tinyurl\.com|malicious-site\.com).*<\/field>
    <description>Email contains suspicious shortened or phishing URLs</description>
  </rule>

  <!-- Emails sent at unusual hours -->
  <rule id="100104" level="5">
    <decoded_as>postfix</decoded_as>
    <field name="time">.*(00:..|01:..|02:..|03:..).*<\/field>
    <description>Email sent at unusual hour</description>
  </rule>

  <!-- Emails with blank subjects -->
  <rule id="100105" level="4">
    <decoded_as>postfix</decoded_as>
    <field name="subject">^$</field>
    <description>Email with empty subject</description>
  </rule>

  <!-- Emails containing “financial” keywords in body -->
  <rule id="100106" level="6">
    <decoded_as>postfix</decoded_as>
    <field name="body">(?i).*(bank account|wire transfer|verify identity|payment overdue|credit card|login details).*<\/field>
    <description>Possible phishing content in email body</description>
  </rule>

  <!-- High-risk sender names -->
  <rule id="100107" level="8">
    <decoded_as>postfix</decoded_as>
    <field name="from">(?i).*(support@secure-login\.com|admin@bankverify\.net|no-reply@paypal\.com).*<\/field>
    <description>High-risk sender detected</description>
  </rule>

  <!-- Repeated emails in short period (spam/phish) -->
  <rule id="100108" level="6">
    <decoded_as>postfix</decoded_as>
    <field name="count">.*([5-9]{1,})<\/field>
    <description>Multiple emails from same sender in short period</description>
  </rule>

  <!-- Emails with suspicious reply-to addresses -->
  <rule id="100109" level="7">
    <decoded_as>postfix</decoded_as>
    <field name="reply-to">(?i).*(noreply@fakebank\.com|security@paypal-security\.net).*<\/field>
    <description>Suspicious reply-to address detected</description>
  </rule>

  <!-- Emails containing urgent phishing phrases -->
  <rule id="100110" level="7">
    <decoded_as>postfix</decoded_as>
    <field name="body">(?i).*(immediate action required|verify your account now|unauthorized access detected).*<\/field>
    <description>Urgent phishing phrases detected in email body</description>
  </rule>

  <!-- Emails with mismatched sender & domain -->
  <rule id="100111" level="8">
    <decoded_as>postfix</decoded_as>
    <field name="from">(?i).*@(gmail\.com|yahoo\.com|hotmail\.com)</field>
    <field name="to">(?i).*@(yourcompany\.com)</field>
    <description>External sender sending to internal domain — possible phishing</description>
  </rule>

</group>
